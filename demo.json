{
  "broker": {
      "tcp_port": 1883,
      "socket_idle_timeout": 600,
      "message_store": "DB",
      "broker_id": "broker-001"
    },

  "zookeepers": {
    "zookeeperHosts": "server",
	"sessionTimeout": 2000,
	"connectTimeout": 2000,
	"rootPath": "hermes",
	"retry": {
		"initialSleepTime": 100,
		"intervalTimes": 10000,
		"maxTimes": 5
	}
  },

  "kafka": {
    "consumer": {
      "zookeeper.connect": "server:2181",
      "group.id": "HermesKafka",
      "consumer.poll.interval.ms": 500,
      "auto.offset.reset": "smallest",
      "bootstrap.servers": "server:9092"
    },
    "producer": {
      "serializer.class": "org.apache.kafka.common.serialization.StringSerializer",
      "bootstrap.servers": "server:9092",
      "default_topic": "EVENT"
    }
  },

  "redis": {
    "host": "server",
    "port": 6380,
    "encoding": "UTF-8",
    "tcpKeepAlive": true,
    "tcpNoDelay": true
  },

  "hbase": {
    "quorum": "server"
  }
}
