{
  "broker": {
      "tcp_port": 1883,
      "socket_idle_timeout": 100,
      "message_store": "DB",
      "broker_id": "broker-001"
    },

  "zookeepers": {
    "zookeeperHosts": "127.0.0.1",
	"sessionTimeout": 10000,
	"connectTimeout": 3000,
	"rootPath": "io.vertx",
	"retry": {
		"initialSleepTime": 100,
		"intervalTimes": 10000,
		"maxTimes": 5
	}
  },

  "kafka": {
    "zookeeper.connect": "localhost:2181",
    "group.id": "VertxBroker",
    "consumer.poll.interval.ms": 500,
    "auto.offset.reset": "smallest",
    "bootstrap.servers": "localhost:9092"
  }
}
